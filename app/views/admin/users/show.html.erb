<% provide(:title, "ユーザー情報詳細") %>
<div class="container">
  <h2 class="mt-5 text-center"><%= nickname(@user)%>さんのユーザー詳細</h2>
    <div class="row m-5">
      <div class="col-10 offset-1">
          <table class="table">
            <tr>
              <th class="text-center">ユーザーID</th>
              <td><%= @user.id%></td>
            </tr>

            <tr>
              <th class="text-center">ニックネーム</th>
              <td><%= nickname(@user) %></td>
            </tr>

            <tr>
              <th class="text-center">フリガナ</th>
              <td><%= nickname_kana(@user)%></td>
            </tr>

            <tr>
              <th class="text-center">電話番号</th>
              <td><%= @user.phone_number%></td>
            </tr>

            <tr>
              <th class="text-center">メールアドレス</th>
              <td><%= @user.email%></td>
            </tr>
            <tr>
              <th class="text-center">会員ステータス</th>
              <% if @user.is_deleted == true%>
               <td class="text-secondary">退会済み</td>
              <% else %>
               <td class="text-success">有効</td>
              <% end %>
            </tr>
          </table>
          <div class="d-flex justify-content-around">
            <p><%= link_to "編集する",admin_users_edit_path, class:"btn btn-success"%></p>
            <p><%= link_to "投稿履歴一覧を見る",admin_posts_index_path, class:"btn btn-primary"%></p>
          </div>
   　　 </div>
  　</div>
 </div>
