<div class="container">
  <h2 class="my-5">Mypage</h2>
  <div class="row">
    <p>ユーザー情報</p>
    <table class="table">
      <tbody>

        <tr>
          <td>nickname</td>
          <td><%= @user.nickname %></td>
        </tr>

        <tr>
          <td>カナ</td>
          <td><%= @user.nickname_kana %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @user.phone_number%></td>
        </tr>
        <tr>
