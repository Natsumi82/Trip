<div class="container">
  <h2 class="my-5">会員情報編集</h2>
  <div class="row">
    <%= form_with model:@user,url:user_path, method: :patch, local: true do |f|%>

    <div class="col-xs-12">
      <div class="form-group row">
        <%= f.label :"ユーザー名",class:"col-4"%>
        <%= f.text_field :nickname, class:"col-8"%>
      </div>

      <div class="form-group row">
        <%= f.label :"フリガナ", class:"col-4"%>
        <%= f.text_field :nickname_kana, class:"col-8"%>
      </div>

      <div class="form-group row">
        <%= f.label :"電話番号", class:"col-4"%>
        <%= f.text_field :phone_number,class:"col-4"%>
      </div>

      <div class="form-group row">
        <%= f.label :"メールアドレス", class:"col-4"%>
        <%= f.email_field :email, class:"col-8"%>
      </div>

      <div class="field">
       <%= f.label :"パスワード" %><br />
       <%= f.password_field :encrypted_password, class:"col-8" %>
      </div>

     <div class="field">
      <%= f.label :"パスワード(確認用)" %>
      <%= f.password_field :encrypted_password, class:"col-8" %>
     </div>

      <div>
        <%= f.submit "編集内容を保存する",class:"btn btn-success mr-5"%>
        <%= link_to "退会する", users_unsubscribe_path,class:"btn btn-danger ml-5"%>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
