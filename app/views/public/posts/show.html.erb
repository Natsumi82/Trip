<% provide(:title, "商品詳細") %>
<div class="container">
  <h2 class="mt-5 text-center">商品詳細</h2>
    <div class="row align-items-center m-5">
      <div class="col-lg text-center mb-5">
  <%= image_tag @post.get_image, :size => '300x250'%>
</div>

<div class="col-lg">
 <table class="table">
  <tr>
   <th>投稿名</th>
   <td><%= @post.name %></td>
  </tr>

  <tr>
   <th>投稿本文</th>
   <td><%= @item.caption %></td>
  </tr>

  <tr>
   <th>プロフィール画像</th>
   <td><%= @post.get.image %></td>
  </tr>

  <tr>
   <th>ユーザー名</th>
   <td><%= @post.user.nickname %></td>
  </tr>

　<tr>
   <th>投稿日</th>
   <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
  </tr>

<div class="d-flex justify-content-around">
 <% if @post.user == current_user %>

 　 <p><%= link_to '編集',edit_post_path(@post.id) , class: 'btn btn-success' %></p>
   <p><%= link_to "削除", posts_path(@post), method: :delete %></p>
  <% end %>

  <div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
    <%= post_comment.user.nickname %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% end %>

   <% if post_comment.user == current_user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
    <% end %>
</div>

<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>

  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>

</div>
</div>
</div>
</div>
