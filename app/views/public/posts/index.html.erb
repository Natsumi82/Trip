<% provide(:title, "投稿") %>
<div class="container">
    <div class="row">
        <div class="col-sm-8 px-sm-0 offset-sm-1">
            <h2 class="my-5">投稿一覧</h2>
        </div>

    </div>
    <table class="table  mb-5">
     <thread>
      <tr>

        <th>User</th>
        <th>Post</th>
    　</tr>
    　</thread>
    　<tbody>

    <tr>
      <% @posts.each do |post| %>
    </tr>
     <td>
      <%= post.user.nickname %>


     </td>

     <td>
      <%= link_to post_path(post.id) do %>
      <%= post.post_name %>
      <% end %>
     </td>
  </tr>
        <% end %>
        </tbody>
    </table>
      <%= paginate @posts %>
        </div>
    </div>
</div>

