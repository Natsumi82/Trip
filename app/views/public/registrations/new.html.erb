<h2>新規ユーザー登録</h2>
<div class="row">
<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
　<tbody>
  　<tr>
  　  <th>ニックネーム</th>
  　   <td class="sign-up-small-cell"></td>
      <td><%= f.text_field :nickname, autofocus: true %></td>
    </tr>

     <tr>
       <th>フリガナ</th>
       <td class="sign-up-small-cell"></td>
       <td><%= f.text_field :nickname_kana, autofocus: true %></td>
     </tr>

     <tr>
      <th>メールアドレス</th>
      <td class="sign-up-small-cell"></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
     </tr>

     <tr>
      <th>電話番号（ハイフンなし）</th>
      <td class="sign-up-small-cell"></td>
      <td><%= f.text_field :phone_number, autofocus: true %></td>
     </tr>

　　　<tr>
      　<th>パスワード（６文字以上）</th>
        <td class="sign-up-small-cell"></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
      　<th>パスワード（確認用）</th>
        <td class="sign-up-small-cell"></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "current-password" %></td>
      </tr>

 </tbody>
</table>
  <br>
  <br>

<div class="customer-sign-up-actions">
<%= f.submit "新規登録", class:"btn btn-success col-xs-3 col-xs-offset-5" %>
</div>
<% end %>
</div>

<div class="container col-xs-6 col-xs-offset-2 sign-up-message">
  <h3>既に登録済みの方</h3>
  <div class="row">
    <span class="col-xs-offset-"><%= link_to 'こちら', new_user_session_path %>からログインしてください。</span>
  </div>
</div>
